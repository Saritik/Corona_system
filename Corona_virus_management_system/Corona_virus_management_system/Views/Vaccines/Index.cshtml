@model IEnumerable<Corona_virus_management_system.Models.Vaccine>

@{
    ViewData["Title"] = "Index";
}

<div class="container" style="display: flex; flex-direction: column; justify-content: flex-start; align-items: center; height: 100vh; margin: 0; text-align: center;">
    <div style="margin-bottom: 20px;">
        <h1 style="font-weight:bold">Vaccines</h1>
    </div>

    <div style="align-self: flex-start; margin-bottom: 10px;">
        <a class="btn btn-primary" asp-action="Create" asp-route-memberId="@ViewBag.MemberId">Create New</a>
    </div>

    <table class="table">
        <thead>
            <tr class="table-dark">
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberId)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.ID" asp-route-memberId="@item.MemberId">Edit</a> |
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
